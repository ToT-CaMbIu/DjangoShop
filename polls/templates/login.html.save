{% extends 'base.html' %}
{% load static %}
{% load crispy_forms_tags %}
{% block content %}
<h3 class='text-center '>Authorization</h3>
<div class='col-sm-8 col-sm-offset-5'>
<form action='' method='POST'>
	{% csrf_token %}
	{{ form|crispy }}
